.image {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.info {
  margin: 800rpx 30rpx 0;
  padding: 50rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  font-size: 32rpx;
  line-height: 2;
  color: #495057;
}

.controls {
  position: fixed;
  bottom: 0;
  padding: 80rpx 0;
  width: 100%;
}

.btn-start {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 240rpx;
  padding: 5rpx 50rpx;
  border-radius: 50rpx;
  background: rgba(73, 80, 87, 0.3);
}

.btn-start-hover {
  background: rgba(73, 80, 87, 0.5);
}

.btn-start .icon {
  width: 32rpx;
  height: 32rpx;
  background: url("data:image/svg+xml,%3Csvg viewBox='0 0 16 16' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath style='fill:%23fff' d='M8 7a2 2 0 1 0 .001 4.001A2 2 0 0 0 8 7zm7-4h-2.503L12 1.771C11.734 1.18 11.422 1 11 1H5c-.422 0-.734.18-1 .771L3.503 3H1c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h14c.55 0 1-.45 1-1V4c0-.55-.45-1-1-1zM8 13a4 4 0 1 1 0-8 4 4 0 0 1 0 8z'/%3E%3C/svg%3E");
}

.btn-start .text {
  color: #fff;
  font-size: 11pt;
}

.yiyan {
  color: #fff;
  bottom: 0;
  text-align: center;
  font-size: 9pt;
  position: fixed;
  left: 10rpx;
  right: 10rpx;
  text-shadow: #000 2rpx 2rpx 2rpx;
  letter-spacing: 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
